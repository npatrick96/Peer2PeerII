<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <top>
      <MenuBar fx:id="topMenu" prefHeight="20.0" prefWidth="100.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <VBox fx:id="bottomVBox" prefHeight="60.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <HBox maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" prefWidth="200.0">
               <children>
                  <Label maxHeight="-Infinity" minHeight="-Infinity" prefHeight="20.0" prefWidth="88.0" text="Host Name" />
                  <TextField fx:id="hostNameTextField" />
                  <Label alignment="CENTER" contentDisplay="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="20.0" prefWidth="101.0" text="Port Number" />
                  <TextField fx:id="portTextField" />
               </children>
            </HBox>
            <HBox fx:id="messageAndButtonsHBox" prefHeight="40.0" prefWidth="200.0">
               <children>
                  <TextArea fx:id="messageTextArea" prefHeight="40.0" prefWidth="300.0" promptText="Type here the message you want to send ..." />
                  <VBox fx:id="buttonsVBox" prefHeight="40.0" prefWidth="100.0">
                     <children>
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendNewMessage" prefHeight="20.0" prefWidth="100.0" text="Send Message">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Button>
                        <Button fx:id="attachFilesButton" mnemonicParsing="false" prefHeight="20.0" prefWidth="100.0" text="Attach Files">
                           <font>
                              <Font size="10.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0" />
         </children>
      </VBox>
   </bottom>
   <center>
      <ListView fx:id="messageArea" maxWidth="-Infinity" minWidth="-Infinity" onEditStart="#initialize" prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
